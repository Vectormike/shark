# Application Configuration
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000

# Database Configuration
# Option 1: Use DATABASE_URL (recommended for production)
DATABASE_URL=postgresql://username:password@localhost:5432/loan_shark_db

# Option 2: Use individual connection parameters (alternative)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=loan_shark_db
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_MAX_CONNECTIONS=20

# Redis Configuration
# Option 1: Use REDIS_URL (recommended)
REDIS_URL=redis://localhost:6379

# Option 2: Use individual connection parameters (alternative)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-change-this-too
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d

# Payment Gateway Configuration
# Choose one: paystack or flutterwave
PAYMENT_PROVIDER=paystack

# Paystack Configuration
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key_here
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key_here

# Flutterwave Configuration
FLUTTERWAVE_SECRET_KEY=FLWSECK_TEST_your_flutterwave_secret_key_here
FLUTTERWAVE_PUBLIC_KEY=FLWPUBK_TEST_your_flutterwave_public_key_here

# SMS Configuration
# Choose one: termii or sendchamp
SMS_PROVIDER=termii
SMS_API_KEY=your_sms_api_key_here
SMS_SENDER_ID=SHARKLOAN
SMS_API_URL=

# WhatsApp Configuration
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token_here
WHATSAPP_PHONE_NUMBER_ID=your_whatsapp_phone_number_id_here
WHATSAPP_API_KEY=your_whatsapp_api_key_here
WHATSAPP_API_URL=https://graph.facebook.com/v18.0

# Admin Configuration
ADMIN_EMAIL=admin@loanshark.local
ADMIN_PASSWORD=admin123
ADMIN_FIRST_NAME=Admin
ADMIN_LAST_NAME=User
ADMIN_PHONE=+2348012345678
ADMIN_GENERATE_PASSWORD=false

# Development/Testing
SIMULATE_TRANSFERS=false
